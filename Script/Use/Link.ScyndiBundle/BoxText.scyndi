void BTLoad()
	Sys.LoadNewState("BOXTEXT","Script/Subs/SubBoxText.lbc")	
end

global void MapText(string ATag,string RF="FLOW_FIELD",int ANum=1)
	locextern AScen "'MAPTEXT'"
	//Sys.Call("BOXTEXT","FlowBoxText.Serial",sprintf("\"%s\", \"%s\", \"%s\", %d",AScen,ATag,RF,ANum or 1))
	Sys.Call("BOXTEXT","FlowBoxText.Serial",AScen,ATag,RF,ANum || 1)
end

global void MapTextLeader(string ATag,string RF="FLOW_FIELD",int ANum=1)
	MapText(sprintf("%s.%s",ATag,Lua.Neil.Globals.Map.Leader),RF,ANum)
end

	//readonly delegate Map = MapText
