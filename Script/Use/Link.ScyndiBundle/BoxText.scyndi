	void Load(string Tag,string File)
		BTLoad()
		//State.Call("BOXTEXT","Scenario.Load",sprintf("\"%s\",\"%s\"",File,tag))
		//Sys.Call("BOXTEXT","Scenario.LoadData",sprintf("\"%s\",\"%s\", false",Trim("Scenario/"..lang.."/"..File),Trim(Tag)))
		Sys.Call("BOXTEXT","Scenario.LoadData",Trim("Scenario/"..lang.."/"..File),Trim(Tag))
	end
	
	void Serial(string AScen, string ATag, string RF="FLOW_FIELD", ANum)
		Events.Flush()
		//Sys.Call("BOXTEXT","FlowBoxText.Serial",sprintf("\"%s\", \"%s\", \"%s\", %d",AScen,ATag,RF,ANum or 1))
		Sys.Call("BOXTEXT","FlowBoxText.Serial",AScen,ATag,RF,ANum || 1)
	end
