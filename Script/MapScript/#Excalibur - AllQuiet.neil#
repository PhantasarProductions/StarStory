#use "Script/Use/Anyway"

group MScript

	Int SickBayDoors
	
	void Draw()
		if SickBayDoors>0
			Map.SetObj("LeftDoorSickbay","X",288-SickBayDoors)
			Map.SetObj("RightDoorSickbay","Y",320+SickBayDoors)
			SickBayDoors--
		end
	end
	
	void Update()
	end
	void Load()
		CSay("Welcome to Excalibur - All is quiet and calm today!")
	end

	void ShowMedicalArea()
		Map.HideButLabel("Sickbay")
		if !Done.Done_Excalibur_Close_Sickbay_doors
			SickBayDoors = 40
		end
	end

	void LeaveSickBay()
		Map.SpawnPlayer("Start")
		Map.SetObjField("PLAYER","Texture","GFX/Actors/Uniform/Wendicka.North.jpbf")		
	end
	
	Constructor
		ZA.Enter("Sluit_Sickbay","ShowMedicalArea")
	end
end